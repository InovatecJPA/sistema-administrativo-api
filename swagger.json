                      "phone": null,
                      "isActive": true,
                      "profile": {
                        "id": "e6f28377-5ff0-4bde-a471-c1d6d53cdd4c",
                        "name": "admin",
                        "description": "Administrador do sistema"
                      },
                      "sector": null
                    }
                  ],
                  "pagination": {
                    "path": "/users",
                    "page": 1,
                    "prev_page_url": false,
                    "next_page_url": false,
                    "total": 1
