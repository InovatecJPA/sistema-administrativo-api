{
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "ES6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dir",
		"rootDir": "./src",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		//"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
