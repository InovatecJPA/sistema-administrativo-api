{
  "compilerOptions": {
    "target": "ES6",                                  
    "module": "commonjs",                              
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,                                
    "rootDir": "./src",
    "outDir": "./out",
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
